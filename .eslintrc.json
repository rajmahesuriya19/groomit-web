{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false,
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["jsconfig.json"]
  },
  "plugins": ["react", "react-hooks", "tailwindcss"],
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:react-hooks/recommended", "eslint-config-prettier"],
  "globals": {
    "process": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // Add your ESLint rules here
  }
}
